<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FaceMorphAI" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Post-splash theme -->
    <style name="Theme.FaceCraft" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">#0F081A</item>
        <item name="android:navigationBarColor">#160D2B</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.FaceCraft.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0F081A</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.FaceCraft</item>
    </style>
</resources>
